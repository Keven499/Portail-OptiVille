                        <InputSelect class="form-control" id="Province" @oninput="ValidateInputs" @bind-Value="identificationModel.provinceEntreprise">
                            <option value="" disabled selected>Veuillez choisir une province</option>
                            @foreach(string province in listeProvinces)
                            {
                                <option value="@province">@province</option>
                            }
